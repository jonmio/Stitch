<% unless current_user %>
  <% if flash[:signup_modal] %>
    <script type='text/javascript'>
      $(document).on('ready', function() {
        $('.sign-up-modal').css('display', 'block');
        $('.sign-up-heading-error').html('Please fill out the form completely');
        setTimeout(function(){
          $('.sign-up-heading-error').html('');
        }, 5000);
      });
    </script>
  <% end %>

  <div class="sign-up-modal">
    <div class="sign-up-form">
      <%= form_for @user do |f| %>
        <button type="button" class="close">x</button>
        <div class="sign-up-user">
          <h3 class="sign-up-heading">SIGN UP</h3>
          <h4 class='sign-up-heading-error'></h4>
        </div>
        Name  <br><%= f.text_field :name, class: 'signup-modal-field', placeholder: "John Doe"%><br>
        Phone (optional) <br><%= f.text_field :phone,  class: 'signup-modal-field', placeholder: "416 676 9999" %><br>
        Email  <br><%= f.email_field :email, class: 'signup-modal-field', id: 'email-signup', placeholder: "johndoe@gmail.com" %><br>
        Password <br><%= f.password_field :password, class: 'signup-modal-field', id: 'signup-field',placeholder: "**********" %><br>
        Password Confirmation <br><%= f.password_field :password_confirmation, class: 'signup-modal-field', id: 'signup-confirmation',placeholder: "**********"  %><br>
        <%= f.submit "Create Account", class: 'modal-submit', id: 'modal-submit-create'%>
      <% end %>
    </div>
  </div>
<% end %>

<% if flash[:login_modal] %>
  <script type='text/javascript'>
    $(document).on('ready', function() {
      $('.login-modal').css('display', 'block');
      $('.login-heading-error').html('Username or password is invalid!');
      setTimeout(function(){
        $('.login-heading-error').html('');
      }, 5000);
    });
  </script>
<% end %>

<% if flash[:login_modal_2] %>
  <script type='text/javascript'>
    $(document).on('ready', function() {
      $('.login-modal').css('display', 'block');
      $('.login-heading-error').html("you aren't logged in, please log in");
      setTimeout(function(){
        $('.login-heading-error').html('');
      }, 5000);
    });
  </script>
<% end %>

  <div class="login-modal">
    <div class="login-form">
      <%= form_tag sessions_path do %>
      <button type="button" class="close">x</button>
      <div class="sign-up-user">
        <h3 class="sign-up-heading">LOG IN</h3>
        <h4 class='login-heading-error'></h4>
      </div>
          <%= label_tag :email %><br>
          <%= email_field_tag :email, params[:email], placeholder: "johndoe@gmail.com", class: 'field'%>
          <%= label_tag :password %><br>
          <%= password_field_tag :password, nil, class:'field', placeholder: "**********"%>
        <%= submit_tag "Log In", class: 'modal-submit', id: 'modal-submit-login' %>
      <% end %>
    </div>
  </div>



